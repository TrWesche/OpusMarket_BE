            "examples": [
                "http://imagesrc.com/imageID"
            ]
        },
        "alt_text": {
            "$id": "#/properties/alt_text",
            "type": "string",
            "title": "The alt_text schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "Image Description"
            ]
        }
    },
    "additionalProperties": true
}